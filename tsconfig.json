{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "./src" : ["*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", 
    "index.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
