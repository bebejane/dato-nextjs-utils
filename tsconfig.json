{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./build",
    "strict": false,
    "target": "ESNext",
    "module": "NodeNext",
    "jsx": "react-jsx",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
  },
  "include": [
    "./src",
    "./types"
  ]
}